<section id="steps-to-apply" class="section position-relative">
  <div class="section__container content">
    <div class="row">
      <header class="col-sm-12">
        <h2>4-step Process*</h2>
        {{ content.stepsToApply.intro }}
      </header>
      <div class="col-sm-12">
        <div class="row steps__container">
          <div class="col-xl-6">
            <div class="row">
              <article class="col-sm-6 step">
                {{ content.stepsToApply.step1 }}
              </article>
              <article class="col-sm-6 step">
                {{ content.stepsToApply.step2 }}
              </article>
            </div>
          </div>
          <div class="col-xl-6">
            <div class="row">
              <article class="col-sm-6 step">
                {{ content.stepsToApply.step3 }}
              </article>
              <article class="col-sm-6 step">
                {{ content.stepsToApply.step4 }}
              </article>
            </div>
          </div>
        </div>
      </div>
      <div class="col-sm-12">
        <div class="row steps-note__container">
          <div class="col-md-9 steps-note__body py-4 d-flex align-items-center">
            {{ content.stepsToApply.note }}
          </div>
          <div class="col-md-3 steps-note__image-container py-4 d-sm-block d-md-flex align-items-center">
            <img src="{{ logoForWhite }}" alt="SmartSAVER" class="img-fluid">
          </div>
        </div>
      </div>
      <footer class="col-sm-12">
        {{ content.stepsToApply.footer }}
      </footer>
    </div>
  </div>
</section>
