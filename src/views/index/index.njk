{% extends '../templates/homeTemplate.njk' %}

{% block title %}SmartSAVER.org{% endblock %}

{% block meta %}
  <link rel="stylesheet" href="{{ style }}">
  <script defer src="{{ script }}"></script>
{% endblock %}

{% block body %}
  <nav class="navbar navbar-expand-md navbar-dark">
    <div class="container">
      <a class="navbar-brand navbar-brand__link" href="#"><img class="img-fluid" src="{{ logo }}" alt="SmartSaver.org Logo"></a>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-content" aria-controls="navbar-content" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbar-content">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link navbar-item__link" href="#claim">Claim</a>
          </li>
          <li class="nav-item">
            <a class="nav-link navbar-item__link" href="#steps-to-apply">Steps to Apply</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle navbar-item__link" href="#" id="applyOnlineDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Apply Online
            </a>
            <div class="dropdown-menu" aria-labelledby="applyOnlineDropdown">
              <a class="dropdown-item" href="#terms-of-agreement">Terms of Agreement</a>
              <a class="dropdown-item" href="#email-section">Email</a>
              <a class="dropdown-item" href="#">Information Survey</a>
              <a class="dropdown-item" href="#">RESP Survey</a>
            </div>
          </li>
          <li class="nav-item">
            <a class="nav-link navbar-item__link" href="#">Contact</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <header class="header d-flex position-relative">
    <div class="header__container section__container">
      <div class="row">
        <div class="col-sm d-flex">
          <div class="title__container container-fluid d-md-flex flex-column">
            <h2 class="header__title">Education is the key to brighter future.</h2>
            <h3 class="header__subtitle">
              Sending your child to higher education can be expensive.
            </h3>

            <div class="header__title-body">
              <p>There are two things you can do now to help your child to reach their potential <span class="highlight">(without costing you a dime!)</span></p>
              <a class="btn button--warning" href="#claim">
                Show me how
              </a>
            </div>
          </div>
        </div>
        <div class="header-image__container col-md d-none d-md-block position-relative">
          <span class="header-overlay position-absolute"></span>
        </div>
      </div>
    </div>
    <span class="header-overlay position-absolute d-block d-md-none"></span>
  </header>

  <main>
    <section id="claim" class="section">
      <div class="section__container content">
        <div class="row">
          <header class="col-md-4"><h2>Two things you can claim for your children</h2></header>

          <div class="col-md-8">
            {{ content.claim }}
          </div>
        </div>
      </div>
    </section>

    <section id="who-can-participate" class="section">
      <div class="section__container content">
        <div class="row">
          <header class="col-md-4"><h2>Who can participate?</h2></header>

          <div class="col-md-8">
            {{ content.whoCanParticipate }}
          </div>
        </div>
      </div>
    </section>

    <section id="steps-to-apply" class="section position-relative">
      <div class="section__container content">
        <div class="row">
          <header class="col-sm-12">
            <h2>4-step  Accelerator Process</h2>
            {{ content.stepsToApply.intro }}
          </header>
          <div class="col-sm-12">
            <div class="row steps__container">
              <div class="col-xl-6">
                <div class="row">
                  <article class="col-sm-6 step">
                    {{ content.stepsToApply.step1 }}
                  </article>
                  <article class="col-sm-6 step">
                    {{ content.stepsToApply.step2 }}
                  </article>
                </div>
              </div>
              <div class="col-xl-6">
                <div class="row">
                  <article class="col-sm-6 step">
                    {{ content.stepsToApply.step3 }}
                  </article>
                  <article class="col-sm-6 step">
                    {{ content.stepsToApply.step4 }}
                  </article>
                </div>
              </div>
            </div>
          </div>
          <footer class="col-sm-12">
            {{ content.stepsToApply.footer }}
          </footer>
        </div>
      </div>
    </section>

    <section id="apply-online" class="section content">
      <div class="section__container">
        <section id="terms-of-agreement" class="terms__section">
          <h2>Participate in the Pilot: Online Application</h2>
          {{ content.applyOnline.intro }}

          <article class="container-fluid box">
            {{ content.applyOnline.termsOfAgreement }}
          </article>

          <form id="terms-of-agreement-form" class="py-4">
            <div class="form-check form-group">
              <input class="form-check-input" type="checkbox" value="true" id="agree-checkbox" name="agree-checkbox">
              <label class="form-check-label" for="agree-checkbox">
                I agree in the terms of agreement.
              </label>
            </div>
            <button type="submit" class="btn button--primary">Submit</button>
          </form>
        </section>
      </div> 
    </section>

    <section id="email-section" class="section">
      <div class="section__container">
        <h3>Online Application Step 1: Enter email</h3>

        {{ content.applyOnline.email.intro }}

        <form id="email-form" class="py-2 element--covered">
          <div class="form-group row">
            <div class="col-sm-6 pt-2">
              <input type="email" class="form-control" id="email-field" name="email-field" placeholder="Email">
            </div>
            <div class="col-sm-6 pt-2">
              <button type="submit" class="btn button--primary">Submit</button>
            </div>
          </div>
          <span class="overlay help help--warning">
            Read and agree to the terms of agreement before proceeding.
          </span>
        </form>
        
        <div class="email-form__help">
          <a data-toggle="popover" data-placement="top" data-content="{{ content.applyOnline.email.helpWhyEmail }}">Why do you need my email?</a>
        </div>
        <div class="email-form__help">
          <a class"btn btn-link" data-toggle="popover" data-placement="top" data-content="{{ content.applyOnline.email.helpNoEmail }}">Don't have an email address?</a>
        </div>
      </div>
    </section>
  </main>
{% endblock %}