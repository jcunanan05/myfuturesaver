    <div class="header__container container d-flex">
      <div class="row mx-auto">
        <div class="col-sm">
          <h1>Education is the key to brighter future.</h1>
        </div>
        <div class="header__image-container col-md d-md-block position-relative">
          <img class="img-fluid" src="{{ headerImage }}" alt="2 Kids Smiling Photo">
        </div>
      </div>
    </div>
  </header>
  <script src="{{ script }}"></script>
